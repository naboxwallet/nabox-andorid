<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">




    <item android:state_pressed="false" android:drawable="@drawable/shape_maincolor"></item>


    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/main" />
            <solid android:color="#f7f9f8" />
            <corners android:radius="4dp" />
        </shape>
    </item>



    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#ff53b8a9"></solid>
            <stroke android:width="1dp" android:color="@color/green_button_basic" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:drawable="@drawable/shape_maincolor"></item>



</selector>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerVertical="true"
        android:layout_height="24dp"/>


    <TextView
        android:id="@+id/tv_dapp_title"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_width="wrap_content"
        android:textColor="@color/textcolor_black_3"
        android:textSize="@dimen/dp_16"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_22"
        android:text="我是标题"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_dapp_desc"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_width="wrap_content"
        android:textColor="@color/textcolor_gray"
        android:textSize="@dimen/dp_10"
        android:hint="@string/null_content"
        android:text="我是内容"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_dapp_title"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:clickable="true"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:background="@drawable/shape_white"
        android:layout_height="190dp">


        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/textcolor_black_3"
                android:textSize="16sp"
                android:text="@string/old_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_old_name"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="24dp"
                android:textColor="@color/textcolor_black_3"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>




        <EditText
            android:id="@+id/edit_new_name"
            android:gravity="left|center_vertical"
            android:background="@null"
            android:textSize="16sp"
            android:hint="@string/new_wallet_name"
            android:textColorHint="#AAB2C9"
            android:textColor="@color/textcolor_black_3"
            android:maxLength="12"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <View
            android:background="@color/textcolor_black_no4"
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_height="1dp"></View>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_marginBottom="5dp"
                android:text="@string/cancel"
                style="@style/MyButton"
                android:layout_width="114dp"
                android:clickable="true"
                android:focusable="true"
                android:textSize="16sp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/btn_sure"
                android:layout_marginLeft="24dp"
                style="@style/GreenButton"
                android:layout_marginBottom="5dp"
                android:layout_width="114dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/sure"
                android:layout_height="40dp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
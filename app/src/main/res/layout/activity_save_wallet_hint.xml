<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">




    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="50dp">


            <RelativeLayout
                android:id="@+id/back"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/back"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>

            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/textcolor_black_3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:visibility="visible"
                android:id="@+id/tv_no_copy"
                android:layout_alignParentRight="true"
                android:text="@string/no_copy_code"
                android:clickable="true"
                android:textColor="@color/main"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="50dp" />




        </RelativeLayout>



        <TextView
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/textcolor_black_3"
            android:textSize="22sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center_horizontal"
            android:text="@string/backup_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="@mipmap/png_beifenqianbao"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"

            android:layout_width="wrap_content"
            android:layout_height="240dp" />

    </LinearLayout>

    <LinearLayout
        android:background="#fff7f7f7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/btn_backup_prikey"
            android:text="@string/backup_personal_key"
            android:layout_marginLeft="@dimen/margin32"
            android:layout_marginRight="@dimen/margin32"
            style="@style/GreenButton"
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <Button
            android:id="@+id/btn_backup_keystore"
            android:text="@string/buckup_keystore"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin32"
            android:layout_marginRight="@dimen/margin32"
            style="@style/GreenButton"
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="44dp" />


    </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
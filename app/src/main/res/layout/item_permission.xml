<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/iv_permission_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="24px"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_permission_2"
            />

    <TextView
            android:id="@+id/tv_permission_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_permission_icon"
            android:ellipsize="end"
            android:singleLine="true"
             android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="信息存储权限" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_permission_des"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/iv_permission_icon"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:text="读取、写入keystore文件"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>
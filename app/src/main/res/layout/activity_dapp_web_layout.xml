<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/textcolor_black_3"
            android:layout_centerVertical="true"
            android:id="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/iv_close"
            android:paddingLeft="@dimen/dp_16"
            android:clickable="true"
            android:src="@mipmap/icon_web_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/ivBtnMore"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_btn_more"
            android:layout_width="42dp"
            android:layout_height="22dp" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nuls.naboxpro.ui.widget.NoScrollWebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.nuls.naboxpro.ui.widget.NoScrollWebView>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:drawableTop="@mipmap/png_no_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>













</LinearLayout>
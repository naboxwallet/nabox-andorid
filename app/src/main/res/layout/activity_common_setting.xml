<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/back"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/back"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>





    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/textcolor_black_3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_save"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/save"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:textSize="16sp"
        android:textColor="@color/textcolor_black_3"
        android:layout_height="match_parent" />

</RelativeLayout>


    <RadioGroup
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/rg_choicelan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_1"
            android:textSize="16sp"
            android:textColor="@color/color_choicelanguage"
            android:button="@null"

            android:layout_marginLeft="@dimen/margin16"
            android:drawableRight="@drawable/radiobutton_selector"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin16"
            android:layout_height="78dp" />

        <View
            android:layout_marginLeft="@dimen/margin16"
            android:layout_width="match_parent"
            android:background="#E9EBF3"
            android:layout_height="1dp"></View>
        <RadioButton
            android:textSize="16sp"
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginLeft="@dimen/margin16"
            android:textColor="@color/color_choicelanguage"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_2"
            android:button="@null"
            android:drawableRight="@drawable/radiobutton_selector"
            android:layout_width="match_parent"
            android:layout_height="78dp" />
        <View
            android:layout_marginLeft="@dimen/margin16"
            android:layout_width="match_parent"
            android:background="#E9EBF3"
            android:layout_height="1dp"></View>
    </RadioGroup>









</LinearLayout>
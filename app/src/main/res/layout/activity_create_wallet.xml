<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <include

        layout="@layout/base_title_layout"/>


    <TextView
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/textcolor_black_3"
        android:textSize="19sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:text="@string/create_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="180dp">



        <ImageView
            android:id="@+id/iv_create"
            android:clickable="true"
            android:layout_width="match_parent"
            android:background="@mipmap/png_chuangjianqianbao"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/add_wallet"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="23dp"
            android:textSize="18sp"
            android:textColor="@color/textcolor_black_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/greenbutton_basic"
            android:layout_height="15dp"></View>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content">



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/iv_import"
            android:clickable="true"
            android:layout_width="match_parent"
            android:background="@mipmap/png_daoruqianbao"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/import_wallet"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="23dp"
            android:textSize="18sp"
            android:textColor="@color/textcolor_black_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/orange_button_basic"
            android:layout_height="15dp"></View>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>